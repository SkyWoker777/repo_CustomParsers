@model LAB4PIparser.Models.OlxViewModel

@{
    ViewBag.Title = "Home - Lab4PI";
}

@if (ViewBag.Error != null)
{
    <div style="margin:16px;" class="alert alert-danger" role="alert">@ViewBag.Error</div>
}
<h3>Olx:</h3>
<form action="/Olx/List">
    <fieldset>
        <div class="form-group">
            What: <input type="text" class="form-control" name="what">
        </div>
        <div class="form-group">
            Where: <input type="text" class="form-control" name="where">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
</fieldset>
</form>

<h3>Trains:</h3>
<form action="/Poezdato/List">
    <fieldset>
        <div class="form-group">
            Where: <input type="text" class="form-control" name="where">
        </div>
        <div class="form-group">
            When: <input type="text" class="form-control" name="when">
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
</fieldset>
</form>